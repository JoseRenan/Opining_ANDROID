<resources>

    <style name="Theme.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Purple theme for the initial screens -->
    <style name="Theme.Purple" parent="Theme.Main">
        <item name="colorPrimary">@color/colorPrimaryDeepPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDeepPurple</item>
        <item name="colorAccent">@color/colorAccentDeepPurple</item>
    </style>

    <!-- Pink theme for the home screens -->
    <style name="Theme.Pink" parent="Theme.Main">
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
    </style>

    <!-- Amber theme for the settings screens -->
    <style name="Theme.Amber" parent="Theme.Main">
        <item name="colorPrimary">@color/colorPrimaryAmber</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAmber</item>
        <item name="colorAccent">@color/colorAccentAmber</item>
    </style>

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Theme for components in activities with amber primary color with grey background -->
    <style name="Theme.Components.Light.Amber" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black_overlay</item>
        <item name="colorControlActivated">@color/colorAccentAmber</item>
    </style>

</resources>
