<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="18:10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_timestamp"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/lbl_content"
        app:layout_constraintTop_toTopOf="@+id/lbl_you"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="Você"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_you"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lbl_timestamp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Este é um exemplo de opinião que eu estou testando aqui"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/talk_baloon_light"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/lbl_timestamp"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>