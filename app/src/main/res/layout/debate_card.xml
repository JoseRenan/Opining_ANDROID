<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="José Renan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_user_name"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintRight_toLeftOf="@+id/lbl_date"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:text="Hoje, 16:30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_date"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/lbl_user_name"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:text="0 pessoas na sala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_count_participants"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text='"A diminuição da maioridade penal é um insulto à sociedade. Lugar de criança é na escola."'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_post"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:textAlignment="textStart"
            android:gravity="start"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_user_name"
            app:layout_constraintBottom_toTopOf="@+id/lbl_count_participants"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textStyle="normal|italic" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>