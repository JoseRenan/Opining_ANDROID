<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.opining">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_opining"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Purple">

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

        <activity
            android:name=".view.activities.SplashScreen"
            android:theme="@style/Theme.Pink">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activities.LoginActivity" />

        <activity
            android:name=".view.activities.RegisterActivity"
            android:parentActivityName=".view.activities.LoginActivity" />

        <activity
            android:name=".view.activities.HomeActivity"
            android:theme="@style/Theme.Pink" />

        <activity android:name=".view.activities.SettingsActivity"
            android:theme="@style/Theme.Amber"
            android:parentActivityName=".view.activities.HomeActivity"/>
    </application>

</manifest>